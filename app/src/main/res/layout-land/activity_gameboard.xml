<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/game_header_info"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/game_board_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_foreground"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/game_board_current_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/game_board_highest_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/game_footer_control_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_footer_control_submit" />

        <TextView
            android:id="@+id/game_footer_control_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_footer_control_restart" />

    </LinearLayout>


